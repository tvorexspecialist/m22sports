/** @var \Magento\Customer\Block\Account\AuthorizationLink $block */

$dataPostParam = '';
$class = "login-top-link";
if ($block->isLoggedIn()) {
    $dataPostParam = sprintf(" data-post='%s'", $block->getPostParams());
    $class = "logout-top-link";
}
?>
<li class="authorization-link <?=$class?>" data-label="<?= $block->escapeHtmlAttr(__('or')) ?>">
    <a <?= /* @noEscape */ $block->getLinkAttributes() ?><?= /* @noEscape */ $dataPostParam ?>>
        <?= $block->escapeHtml($block->getLabel()) ?>
    </a>
</li>
