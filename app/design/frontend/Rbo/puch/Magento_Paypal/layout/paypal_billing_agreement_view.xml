<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <move element="page.main.title" destination="content-main-container" before="-"/>
        <referenceContainer name="content">
            <container htmlClass="content-main-wrapper" htmlTag="div">
                <container htmlClass="content-main-container" htmlTag="div" name="content-main-container">
                    <block class="Magento\Paypal\Block\Billing\Agreement\View" name="customer.account.billing.agreement" template="Magento_Paypal::billing/agreement/view.phtml" cacheable="false"/>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>
